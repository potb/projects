{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["dist/apps/website"],
      "options": {
        "command": "vite build --config apps/website/vite.config.ts"
      }
    },
    "deploy": {
      "executor": "nx:run-commands",
      "options": {
        "command": "wrangler pages publish dist/apps/website --project-name website"
      }
    },
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "command": "vite --config apps/website/vite.config.ts"
      }
    },
    "typecheck": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc -p apps/website/tsconfig.json"
      }
    }
  },
  "tags": []
}
